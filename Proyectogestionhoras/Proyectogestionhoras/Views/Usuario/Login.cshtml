@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Inicio Sesión | Unit</title>
    <link rel="icon" href="~/unit-ico.png" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

    <div class="bg-white shadow-xl border border-gray-200 rounded-xl w-full max-w-md p-8">
        
        <div class="flex justify-center mb-4">
            <img src="~/images/logo-unit.png" alt="Logo" class="h-12">
        </div>

        
        <div class="text-center mb-6">
            <h1 class="text-xl font-semibold text-gray-700">Bienvenido a Unit</h1>
            <p class="text-sm text-gray-500">Gestión de Proyectos</p>
        </div>

        
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4 border border-red-300 text-sm">
                @ViewBag.Error
            </div>
        }
        @if (!string.IsNullOrEmpty(ViewBag.Warning))
        {
            <div class="bg-yellow-100 text-yellow-800 px-4 py-2 rounded mb-4 border border-yellow-300 text-sm">
                @ViewBag.Warning
            </div>
        }

        
        <form action="@Url.Action("Login", "Usuario")" method="post" class="space-y-4">
            <!-- RUT -->
            <div>
                <label for="rut" class="block text-sm font-medium text-gray-700">RUT</label>
                <input type="text" id="rut" name="rut" placeholder="RUT"
                       class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-400"
                       required />
            </div>

            
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Contraseña</label>
                <input type="password" placeholder="******" id="password" name="contrasena"
                       class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-400"
                       required />
            </div>

            
            <div>
                <button type="submit"
                        class="w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2 rounded-md transition duration-200">
                    Iniciar Sesión
                </button>
            </div>
        </form>
    </div>

</body>
</html>
