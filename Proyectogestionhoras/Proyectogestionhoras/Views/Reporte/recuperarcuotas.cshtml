@{
    ViewData["Title"] = "Facturación";
}

<h2 class="text-2xl font-bold mb-4">Facturación</h2>

<div class="container mx-auto mt-4 p-4 bg-white rounded-lg shadow-md">
    <div class="overflow-x-auto">
        <table id="facturasTable" class="min-w-full border-collapse border border-black">
            <thead class="bg-blue-100">
                <tr>
                    <th class="text-left text-xs font-medium ">Tipo</th>
                    @if (ViewBag.Cuotas != null)
                    {
                        @foreach (var fecha in ViewBag.Cuotas)
                        {
                            <th class="text-left text-xs font-medium ">@fecha.Mes/@fecha.Anio</th>
                        }
                    }

                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">

                @if (ViewBag.Montofactura != null)
                {
                    <tr>
                        <td class="text-xs border font-medium text-left border-black px-4 py-2 min-w-[150px]">Meta</td>
                  
                    @foreach (var f in ViewBag.Montofactura)
                    {
                     <td class="text-xs border font-medium text-right border-black px-4 py-2 min-w-[150px]">@String.Format("{0:N0}", Math.Round(@f.Monto))</td>
                    }
                    </tr>
                }

                 @if (ViewBag.Cuotas != null)
                {
                     
               
                        <tr>
                            <td class="text-xs border font-medium text-left border-black px-4 py-2 min-w-[150px]">Proyectos</td>
                        @foreach (var c in ViewBag.Cuotas)
                        {
                            <td class="text-xs border font-medium text-right border-black px-4 py-2 min-w-[150px]">@String.Format("{0:N0}", Math.Round(  @c.Monto))</td>
                        }


                        </tr>



                    
                }

            </tbody>
        </table>
    </div>
</div>