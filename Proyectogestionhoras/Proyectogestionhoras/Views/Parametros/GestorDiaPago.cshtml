@model Proyectogestionhoras.Models.Diapago

@{
    ViewData["Title"] = "Día Pago";
}

<div class="max-w-5xl mx-auto mt-12 bg-white p-8 shadow-lg rounded-xl flex flex-col items-center">
    
    <div class="w-full md:w-3/4 mb-6">
        <div class="bg-white p-4 rounded-lg shadow-md">
            <p class="text-sm text-gray-600">
                Asigna el día de pago de las horas de Socios/Staffs.
            </p>
        </div>
    </div>
    @if (TempData["Successdia"] != null)
    {
        <div class="mb-4 p-4 text-green-800 bg-green-100 border border-green-300 rounded-md">
            @TempData["Successdia"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="mb-4 p-4 text-red-800 bg-red-100 border border-red-300 rounded-md">
            @TempData["Errordia"]
        </div>
    }

    <!-- Formulario -->
    <div class="w-full md:w-1/2">
        <h2 class="text-center text-xl font-semibold text-gray-800 mb-4">Asignar Día de Pago HH</h2>

        <form action="@Url.Action("GuardarActualizarDiaPago", "Parametros")" method="post" class="space-y-4">
            <input type="hidden" id="id" name="Id" value="@Model.Id" />

            <label for="dia" class="block text-sm font-medium text-gray-700">Día de Pago:</label>
            <input type="number" id="dia" min="1" max="31" name="Dia" value="@Model.Dia"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-400"
                   required />

            <button type="submit"
                    class="w-full py-2 bg-orange-500 hover:bg-orange-500 text-white font-semibold rounded-md transition duration-200">
                Guardar
            </button>
        </form>
    </div>
</div>
<script>
    document.getElementById("dia").addEventListener("input", function () {
        const valor = parseInt(this.value);
        if (valor < 1 || valor > 31) {
            this.setCustomValidity("Por favor, ingrese un número entre 1 y 31.");
        } else {
            this.setCustomValidity("");
        }
    });
</script>