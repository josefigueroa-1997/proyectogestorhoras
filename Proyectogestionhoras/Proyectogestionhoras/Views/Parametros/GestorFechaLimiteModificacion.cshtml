@model Proyectogestionhoras.Models.Fechalimitemodificacioon

@{
    ViewData["Title"] = "Fecha Limite Modificación";
}

<div class="max-w-5xl mx-auto mt-12 bg-white p-8 shadow-lg rounded-xl flex flex-col items-center">

    <div class="w-full md:w-3/4 mb-6">
        <div class="bg-white p-4 rounded-lg shadow-md">
            <p class="text-sm text-gray-600">
                Asigna la fecha limite de modificación de datos de proyectos.
            </p>
        </div>
    </div>
    @if (TempData["Successfechalimite"] != null)
    {
        <div class="mb-4 p-4 text-green-800 bg-green-100 border border-green-300 rounded-md">
            @TempData["Successfechalimite"]
        </div>
    }
    @if (TempData["ErrorFechalimite"] != null)
    {
        <div class="mb-4 p-4 text-red-800 bg-red-100 border border-red-300 rounded-md">
            @TempData["ErrorFechalimite"]
        </div>
    }

    <!-- Formulario -->
    <div class="w-full md:w-1/2">
        <h2 class="text-center text-xl font-semibold text-gray-800 mb-4">Asignar Fecha limite de modificación y Estado </h2>

        <form action="@Url.Action("GuardarActualizarFechaLimite", "Parametros")" method="post" class="space-y-4">
            <input type="hidden" id="id" name="Id" value="@Model.Id" />
            <!-- Fecha límite -->
            <label for="fecha" class="block text-sm font-medium text-gray-700">Fecha límite:</label>
            <input type="date" name="Fechalimite" value="@Model.Fechalimite?.ToString("yyyy-MM-dd")"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-400"
                   required />

            <!-- Estado -->
            <label class="block text-sm font-medium text-gray-700">Estado:</label>
            <div class="flex items-center space-x-4">
                <label class="flex items-center">
                    <input type="radio" name="Estado" value="Habilitado"
                           @(Model.Estado == "Habilitado" ? "checked" : "")
                           class="text-orange-500 focus:ring-orange-400" />
                    <span class="ml-2 text-gray-700">Habilitado</span>
                </label>
                <label class="flex items-center">
                    <input type="radio" name="Estado" value="Inhabilitado"
                           @(Model.Estado == "Inhabilitado" ? "checked" : "")
                           class="text-orange-500 focus:ring-orange-400" />
                    <span class="ml-2 text-gray-700">Inhabilitado</span>
                </label>
            </div>

            <button type="submit"
                    class="w-full py-2 bg-orange-500 hover:bg-orange-500 text-white font-semibold rounded-md transition duration-200">
                Guardar
            </button>
        </form>
    </div>
</div>
