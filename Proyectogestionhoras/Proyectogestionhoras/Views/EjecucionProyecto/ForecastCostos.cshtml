		montoInputs.forEach(input => {
			input.addEventListener('input', formatCurrency);
		});

		const form = document.querySelector('form');
		if (form) {
			form.addEventListener('submit', cleanInputsOnSubmit);
		}

		// Manejar inputs dinámicos para diferentes botones
		function attachListenerAfterDelay(selector, nameMatch) {
			document.querySelector(selector)?.addEventListener("click", () => {
				setTimeout(() => {
					const nuevosInputs = document.querySelectorAll(`input[name*="${nameMatch}"]`);
					nuevosInputs.forEach(input => {
						if (!input.hasAttribute('data-format-listener')) {
							input.addEventListener('input', formatCurrency);
							input.setAttribute('data-format-listener', 'true');
						}
					});
				}, 100);
			});
		}

