                        @foreach (var flujo in ViewBag.Flujo)
                        {
                            <td class="p-2 border border-gray-300 text-right"> 
                                @(flujo.MontoReal == 0 ? "" : String.Format("{0:N0}", flujo.MontoReal))
                            </td>
                            totalreal += flujo.MontoReal;
                        }
                        <td class="p-2 border border-gray-300 text-right">
                            @(totalreal == 0 ? "" : String.Format("{0:N0}", totalreal))
                        </td>
                    </tr>
                   
                </tbody>
            </table>
        </div>
    </div>

