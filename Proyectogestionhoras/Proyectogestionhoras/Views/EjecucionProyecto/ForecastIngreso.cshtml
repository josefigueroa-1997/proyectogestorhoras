                            <td class="p-2 border border-gray-300 text-right">
                                @(flujo.MontoProyectado == 0 ? "" : String.Format("{0:N0}", flujo.MontoProyectado))
                            </td>
                            totalproyectado += flujo.MontoProyectado;
                        }
                        <td class="p-2 border border-gray-300 text-right">
                            @(totalproyectado == 0 ? "" : String.Format("{0:N0}", totalproyectado))
