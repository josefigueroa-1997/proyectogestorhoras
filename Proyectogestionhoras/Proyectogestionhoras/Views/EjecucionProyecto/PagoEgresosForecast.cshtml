@model List<Proyectogestionhoras.Models.DTO.ProyectoEgresosDTO>

@if (Model == null || !Model.Any())
{
    <div class="py-12 px-4">
        @if (TempData["ErrorPagosEgresos"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
                @TempData["ErrorPagosEgresos"]
            </div>
        }
        @if (TempData["SuccessPagosEgresos"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
                @TempData["SuccessPagosEgresos"]
            </div>
        }
        <h2 class="text-2xl font-bold text-orange-500 mb-6">Pago de Forecast Egresos:</h2>
        <div class="bg-yellow-100 border border-yellow-400 text-yellow-800 px-4 py-3 rounded">
            No hay registros de forecast en egresos.
        </div>
    </div>
}
else
{
    <form method="post" asp-action="RegistrarPagoEgreso" id="formEgresos">
        <div class="py-12 px-4">
            <div class="container mx-auto mb-4 p-4 bg-white rounded-lg shadow-md">
                <p class="text-sm text-gray-600">A Continuación, se muestran los egresos con estado de Forecast. Para registrar los pagos de los egresos hay 3 formas de hacerlo.
					Puede seleccionar los egresos individualmente, puede seleccionar todos los egresos de un proyecto haciendo clic en el checkbox junto al nombre del proyecto, o puede seleccionar todos los egresos de todos los proyectos haciendo clic en el checkbox "Pagar todo". Luego, haga clic en "Registrar Pago" para completar la acción.
                </p>
            </div>
            <h2 class="text-2xl font-bold text-orange-500 mb-6">Pago de Forecast Egresos:</h2>

            @if (TempData["ErrorPagosEgresos"] != null)
            {
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
                    @TempData["ErrorPagosEgresos"]
                </div>
            }
            @if (TempData["SuccessPagosEgresos"] != null)
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
                    @TempData["SuccessPagosEgresos"]
                </div>
            }

            <!-- Checkbox global -->
            <div class="mb-6 flex items-center space-x-2">
                <input type="checkbox" id="pagarTodo" class="form-checkbox h-5 w-5 text-orange-500" />
                <label for="pagarTodo" class="text-gray-800 font-medium">Pagar todo</label>
            </div>

            <!-- Lista de proyectos -->
            <div class="space-y-4">
                @foreach (var proyecto in Model)
                {
                    var accordionId = "accordion-" + proyecto.IdProyecto;
                    var proyectoCheckboxId = "proyecto-" + proyecto.IdProyecto;
                    <div class="border border-orange-500 rounded">
                        <div class="bg-orange-500 text-white flex items-center justify-between p-4 cursor-pointer"
                             onclick="document.getElementById('@accordionId').classList.toggle('hidden')">
                            <div class="flex items-center space-x-2">
                                <input type="checkbox"
                                       class="form-checkbox h-5 w-5 text-white proyecto-checkbox"
                                       data-proyecto-id="@proyecto.IdProyecto"
                                       id="@proyectoCheckboxId"
                                       onclick="event.stopPropagation();" />
                                <label for="@proyectoCheckboxId" class="text-lg font-semibold cursor-pointer">@proyecto.NombreProyecto</label>
                            </div>
                            <span class="underline cursor-pointer">Ver detalle</span>
                        </div>

                        <div id="@accordionId" class="hidden bg-gray-100 text-black p-4">
                            <table class="w-full text-sm table-auto">
                                <thead>
                                    <tr class="text-left border-b border-gray-300">
                                        <th class="p-2">✔</th>
                                        <th class="p-2">Nombre del Egreso</th>
                                        <th class="p-2">Monto</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var egreso in proyecto.Egresos)
                                    {
                                        var egresoCheckboxId = $"egreso-{proyecto.IdProyecto}-{egreso.Idegreso}";
                                        <tr class="border-b border-gray-200">
                                            <td class="p-2">
                                                <input type="checkbox"
                                                       class="form-checkbox text-orange-500 egreso-checkbox"
                                                       data-proyecto-id="@proyecto.IdProyecto"
                                                       data-idegresoregistro="@egreso.Idegresoregistro"
                                                       data-idegreso="@egreso.Idegreso"
                                                       data-idproyecto="@proyecto.IdProyecto"
                                                       data-monto="@egreso.Monto"
                                                       data-tiposervicio="@egreso.Tipo" />
                                            </td>
                                            <td class="p-2">@egreso.egreso</td>
                                            <td class="p-2">$@egreso.Monto.ToString("N0")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>

            <!-- Botón de envío -->
            <div class="mt-8">
                <button type="submit"
                        class="bg-black text-white px-4 py-2 cursor-pointer rounded-t hover:bg-gray-800 transition">
                    Registrar Pago
                </button>
            </div>
        </div>
    </form>
}

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const pagarTodo = document.getElementById("pagarTodo");

        pagarTodo?.addEventListener("change", function () {
            const checked = this.checked;
            document.querySelectorAll(".proyecto-checkbox, .egreso-checkbox").forEach(cb => {
                cb.checked = checked;
            });
        });

        document.querySelectorAll(".proyecto-checkbox").forEach(projectCheckbox => {
            projectCheckbox.addEventListener("change", function () {
                const proyectoId = this.dataset.proyectoId;
                const egresos = document.querySelectorAll(`.egreso-checkbox[data-proyecto-id='${proyectoId}']`);
                egresos.forEach(cb => cb.checked = this.checked);
            });
        });

        document.getElementById("formEgresos")?.addEventListener("submit", function (e) {
            const form = this;

            document.querySelectorAll(".hidden-egreso-input").forEach(el => el.remove());

            const seleccionados = document.querySelectorAll(".egreso-checkbox:checked");

            seleccionados.forEach((cb, i) => {
                const crearInput = (name, value) => {
                    const input = document.createElement("input");
                    input.type = "hidden";
                    input.name = `egresos[${i}].${name}`;
                    input.value = value;
                    input.classList.add("hidden-egreso-input");
                    form.appendChild(input);
                };

                crearInput("Idegresoregistro", cb.dataset.idegresoregistro);
                crearInput("Idegreso", cb.dataset.idegreso);
                crearInput("Idpeoyecto", cb.dataset.idproyecto);
                crearInput("Monto", cb.dataset.monto);
                crearInput("Tiposervicio", cb.dataset.tiposervicio);
            });
        });
    });
</script>
