							const mesesUnicos = [...new Set(flujoCaja.map(item => `${item.mes}-${item.anio}`))];

							mesesUnicos.sort((a, b) => new Date(a.split('-')[1], a.split('-')[0] - 1) - new Date(b.split('-')[1], b.split('-')[0] - 1));


