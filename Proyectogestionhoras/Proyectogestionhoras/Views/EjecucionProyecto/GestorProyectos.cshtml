									totalRow.innerHTML += `<td class="text-xs border font-bold text-right  border-black px-4 py-2 min-w-[100px]">${totalRealForecast !== 0 ? formatearMiles(totalRealForecast) : ''}</td>`;

									totalRow.style.cursor = 'pointer';
