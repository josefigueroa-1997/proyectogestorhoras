									  const numero = parseFloat(strValor.replace(/\./g, '').replace(',', '.'));
									  if (isNaN(numero)) return "";

									  return numero.toLocaleString("es-CL", {
										minimumFractionDigits: 0,
										maximumFractionDigits: 0
									  });
