<script>
	let fechaLimiteGlobal = null;
	let estadoGlobal = null;

	async function obtenerFechaLimiteEstado() {
		if (!fechaLimiteGlobal || !estadoGlobal) {
			const response = await fetch("/Parametros/ObtenerFechaLimiteEstado");
			const data = await response.json();
			fechaLimiteGlobal = new Date(data.fechalimite);
			estadoGlobal = data.estado;
		}
		return { fechaLimiteGlobal, estadoGlobal };
	}
	async function aplicarRestriccionesFecha(fila = null) {
		const { fechaLimiteGlobal, estadoGlobal } = await obtenerFechaLimiteEstado();

	if (estadoGlobal === "Habilitado") {
		let fechaMinima = new Date(fechaLimiteGlobal);
		fechaMinima.setDate(fechaMinima.getDate() + 1); // +1 día
		let fechaISO = fechaMinima.toISOString().split("T")[0];

		const inputs = fila
			? fila.querySelectorAll('input[type="date"]')
			: document.querySelectorAll('input[type="date"]');

		inputs.forEach(input => {
			input.setAttribute("min", fechaISO);
			 let alerta = document.createElement('div');
			alerta.style.color = 'red';
			alerta.style.fontSize = '0.8rem';
			alerta.style.display = 'none';
			alerta.textContent = `La fecha debe ser >= ${fechaISO}`;
			input.insertAdjacentElement('afterend', alerta);
			// Agregamos el listener con debounce
			input.addEventListener('input', debounce(function() {
				if (this.value && new Date(this.value) < fechaMinima) {
					this.value = fechaISO;
				}
			}, 2000)); // 1000ms = 1 segundo
		});
	}
	
	}
		// Función de debounce
	function debounce(fn, delay) {
		let timer;
		return function (...args) {
			clearTimeout(timer);
			timer = setTimeout(() => fn.apply(this, args), delay);
		};
	}
</script>
