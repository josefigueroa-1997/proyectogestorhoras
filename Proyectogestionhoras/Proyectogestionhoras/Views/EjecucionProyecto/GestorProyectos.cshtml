										  return;
										}

										let numero = parseInt(numeroStr, 10);

										let textoFormateado = numero.toLocaleString("es-CL");

										input.value = esNegativo ? "-" + textoFormateado : textoFormateado;

									
										let diff = input.value.length - valorSinFormato.length;
