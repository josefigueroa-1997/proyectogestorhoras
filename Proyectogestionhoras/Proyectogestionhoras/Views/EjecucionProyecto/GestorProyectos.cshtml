									  }

									  let inicio = Math.max(1, paginaActual - 4);
									  let fin = Math.min(totalPaginas, inicio + 9);

									  // Ajuste si estamos cerca del final
									  if (totalPaginas - paginaActual < 5) {
										inicio = Math.max(1, totalPaginas - 9);
										fin = totalPaginas;
									  }

									  for (let i = inicio; i <= fin; i++) {
