    var montoproyectoElement = document.getElementById("montoproyecto");
    var NetoElement = document.getElementById("neto");
    var IvaElement = document.getElementById("iva");
    var TotalfElement = document.getElementById("totalf");
    var totalesNetoElement = document.getElementById("totalesNeto");
    var totalesIvaElement = document.getElementById("totalesIva");
    var totalesFacturasElement = document.getElementById("totalesFacturas");
    var totalgastosElemento = document.getElementById("totalgastos");
    var totalserviciosElemento = document.getElementById("totalservicios");
    var totalcostosElemento = document.getElementById("totalcostos");

    var NetoValue = parseFloat(NetoElement.innerText);
    var IvaValue = parseFloat(IvaElement.innerText);
    var TotalfValue = parseFloat(TotalfElement.innerText);
    var totalesNetoValue = parseFloat(totalesNetoElement.innerText);
    var totalesIvaValue = parseFloat(totalesIvaElement.innerText);
    var totalesFacturasValue = parseFloat(totalesFacturasElement.innerText);
    var totalgastoValue = parseFloat(totalgastosElemento.innerText);
    var totalserviciosValue = parseFloat(totalserviciosElemento.innerText);
    var totalcostosValue = parseFloat(totalcostosElemento.innerText);
    var montoproyectoValue = parseFloat(montoproyectoElement.innerText);

    NetoElement.innerText = NetoValue.toLocaleString('de-DE', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    });
    IvaElement.innerText = IvaValue.toLocaleString('de-DE', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    });
    TotalfElement.innerText = TotalfValue.toLocaleString('de-DE', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    });
    totalesNetoElement.innerText = totalesNetoValue.toLocaleString('de-DE', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    });
    totalesIvaElement.innerText = totalesIvaValue.toLocaleString('de-DE', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    });
    totalesFacturasElement.innerText = totalesFacturasValue.toLocaleString('de-DE', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    });
    totalgastosElemento.innerText = totalgastoValue.toLocaleString('de-DE', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    });
    totalserviciosElemento.innerText = totalserviciosValue.toLocaleString('de-DE', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    });
    totalcostosElemento.innerText = totalcostosValue.toLocaleString('de-DE', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    });
    montoproyectoElement.innerText = montoproyectoValue.toLocaleString('de-DE', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
    });
</script>