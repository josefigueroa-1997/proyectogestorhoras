    </div>
    <div class="form-group">
        <p class="form-subtitle" style="color:black;">Síntesis Económica del Proyecto</p>
        <table style="width: 80%; border-collapse: collapse; margin: 0 auto;">
            <thead>
                <tr style="background-color: #fa8164; color: black; text-align:center">
                    <th style="padding: 10px; border: 1px solid #ddd;">Nombre</th>
                    <th style="padding: 10px; border: 1px solid #ddd;">Total Proyectado</th>
                    <th style="padding: 10px; border: 1px solid #ddd;">Total Real</th>
                    <th style="padding: 10px; border: 1px solid #ddd;">Total Forecast</th>
                    <th style="padding: 10px; border: 1px solid #ddd;">Total Real + Forecast</th>
                    <th style="padding: 10px; border: 1px solid #ddd;">Porcentaje Proyectado</th>
                    <th style="padding: 10px; border: 1px solid #ddd;">Porcentaje Real + Forecast</th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal totalingresosrealforecast = IngresoReal + IngresoForecast;
                    decimal totalsociosrealforecast = SocioReal + SocioForecast;
                    decimal totalstaffrealforecast = StaffReal + StaffForecast;
                    decimal totalconsultorrealforecast = ConsultorReal + ConsultorForecast;
                    decimal totalserviciosrealforecast = ServiciosReal + ServiciosForecast;
                    decimal totalgastosrealforecast = GastosReal + GastosForecast;
                }
                <tr>
                    <td style="padding: 10px; border: 1px solid #ddd; text-align:left;"><strong>Ingresos</strong></td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;"><strong>@String.Format("{0:N0}", Monto)</strong></td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;"><strong>@String.Format("{0:N0}", IngresoReal)</strong></td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;"><strong>@String.Format("{0:N0}", IngresoForecast)</strong></td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;"><strong>@String.Format("{0:N0}", totalingresosrealforecast)</strong></td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;"><strong>100%</strong></td>
                    @{
                        decimal porcentajeingresorealforecast = Math.Round((totalingresosrealforecast / Monto) * 100, 2);
                    }
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;"><strong>@String.Format("{0:N0}", porcentajeingresorealforecast)%</strong></td>
                </tr>
                <tr>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:left;"><strong>Horas Socios</strong></td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", totalsocios)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", SocioReal)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", SocioForecast)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", totalsociosrealforecast)</td>
                    @{
                        decimal porcentajesocio = Math.Round((totalsocios / Monto) * 100, 2);
                        decimal porcentajesociorealforecast = 0;
                        if (totalsocios > 0)
                        {
                            porcentajesociorealforecast = Math.Round((totalsociosrealforecast * 100) / totalsocios, 2);
                        }
                       

                    }
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", porcentajesocio)%</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N2}", porcentajesociorealforecast)%</td>
                </tr>
                <tr>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:left;"><strong>Horas Staff</strong></td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", totalstaff)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", StaffReal)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", StaffForecast)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", totalstaffrealforecast)</td>
                    
                    @{
                        decimal porcentajestaff = Math.Round((totalstaff / Monto) * 100, 2);
                        decimal porcentajestaffrealforecast = 0;
                        if (totalstaff > 0)
                        {
                            porcentajestaffrealforecast = Math.Round((totalstaffrealforecast * 100) / totalstaff, 2);
                        }
                        
                    }
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", porcentajestaff)%</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N2}", porcentajestaffrealforecast)%</td>
                </tr>
                <tr>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:left;"><strong>Horas Cons.Externos</strong></td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", totalconsultores)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", ConsultorReal)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", ConsultorForecast)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", totalconsultorrealforecast)</td>
                    @{
                        decimal porcentajeconsultores = Math.Round((totalconsultores / Monto) * 100, 2);
                        decimal porcentajeconsultorrealforecast = 0;
                        if (totalconsultores > 0)
                        {
                             porcentajeconsultorrealforecast = Math.Round((totalconsultorrealforecast * 100) / totalconsultores, 2);
                        }
                        
                    }
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", porcentajeconsultores)%</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N2}", porcentajeconsultorrealforecast)%</td>
                </tr>

                <tr>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:left;"><strong>Serv. Contratados</strong></td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", totalservicios)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", ServiciosReal)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", ServiciosForecast)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", totalserviciosrealforecast)</td>

                    @{
                        decimal porcentajeservicios = Math.Round((totalservicios / Monto) * 100, 2);
                        decimal porcentajeserviciosrealforecast = 0;
                        if (totalservicios > 0)
                        {
                            porcentajeserviciosrealforecast = Math.Round((totalserviciosrealforecast * 100) / totalservicios, 2);
                        }
                        
                    }
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", porcentajeservicios)%</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N2}", porcentajeserviciosrealforecast)%</td>
                </tr>
                <tr>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:left;"><strong>Gastos Operacionales</strong></td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", totalgastos)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", GastosReal)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", GastosForecast)</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", totalgastosrealforecast)</td>
                    @{
                        decimal porcentajegastos = Math.Round((totalgastos / Monto) * 100, 2);
                        decimal porcentajegastosrealforecast = 0;
                        if (totalgastos > 0)
                        {
                            porcentajegastosrealforecast = Math.Round((totalgastosrealforecast * 100) / totalgastos, 2);
                        }
                    }
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N0}", porcentajegastos)%</td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align:right;">@String.Format("{0:N2}", porcentajegastosrealforecast)%</td>

                </tr>
                @{
                    decimal totalegresos = totalsocios + totalstaff + totalconsultores + totalgastos + totalservicios;
                    decimal totalegresosreales = SocioReal + StaffReal + ConsultorReal + ServiciosReal + GastosReal;
                    decimal totalegresosforecast = SocioForecast + StaffForecast + ConsultorForecast + ServiciosForecast + GastosForecast;
                    decimal totalegresosrealforecast = totalegresosreales + totalegresosforecast;
                    decimal porcentaegresos = porcentajegastos + porcentajeservicios + porcentajeconsultores + porcentajestaff + porcentajesocio;
                    decimal porcentaegresosrealforecast = 0;
                    if (totalegresosrealforecast > 0)
                    {
                        porcentaegresosrealforecast = Math.Round((totalegresosrealforecast * 100) / totalegresos, 2);
                    }
                }
                <tr>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:left;"><strong>Total Egresos</strong></td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;">
                        <strong>@String.Format("{0:N0}", totalegresos)</strong>
                    </td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;">
                        <strong>@String.Format("{0:N0}", totalegresosreales)</strong>
                    </td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;">
                        <strong>@String.Format("{0:N0}", totalegresosforecast)</strong>
                    </td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;">
                        <strong>@String.Format("{0:N0}", totalegresosrealforecast)</strong>
                    </td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;">
                        <strong>@String.Format("{0:N0}", porcentaegresos)%</strong>
                    </td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;">
                        <strong>@String.Format("{0:N2}", porcentaegresosrealforecast)%</strong>
                    </td>
                </tr>
                @{
                    decimal margen = Monto - totalegresos;
                    decimal margenreal = IngresoReal - totalegresosreales;
                    decimal margenforecast = IngresoForecast - totalegresosforecast;
                    decimal margenrealforecast = margenreal + margenforecast;
                    decimal porcentajemargen = 100 - porcentaegresos;
                    decimal porcentajemargenforecastcostos = 0;
                    if (margenrealforecast > 0)
                    {
                        porcentajemargenforecastcostos = Math.Round((margenrealforecast * 100) / totalingresosrealforecast, 2);
                    }
                }
                <tr style="background-color: #fa8164; color: black;">
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:left;"><strong>Margen Esperado</strong></td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;"><strong>@String.Format("{0:N0}", margen)</strong></td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;"><strong>@String.Format("{0:N0}", margenreal)</strong></td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;"><strong>@String.Format("{0:N0}", margenforecast)</strong></td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;"><strong>@String.Format("{0:N0}", margenrealforecast)</strong></td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;"><strong>@String.Format("{0:N0}", porcentajemargen)%</strong></td>
                    <td style="padding: 10px; border: 1px solid #fa8164;text-align:right;"><strong>@String.Format("{0:N2}", porcentajemargenforecastcostos)%</strong></td>
                </tr>
            </tbody>
        </table>

    </div>

</div>

