                fila.appendChild(fechaEmision);
                fila.appendChild(monto);
                fila.appendChild(observacion);
                fila.appendChild(idCuenta);
                fila.appendChild(idCuota);

                tablaBody.appendChild(fila);
            }
        } else if (numCuotas < filasActuales) {
            filasEliminadas = filasActuales - numCuotas;
            while (tablaBody.children.length > numCuotas) {
                tablaBody.removeChild(tablaBody.lastChild);
            }
        }
        filasEliminadasInput.value = filasEliminadas;
        // Agregar formateo a los nuevos campos de monto
        const montos = document.querySelectorAll('.monto-factura');
        montos.forEach((input) => {
            input.removeEventListener('input', handleMontoInput);
            input.addEventListener('input', handleMontoInput);
        });
    });

    function handleMontoInput(event) {
        const cursorPos = this.selectionStart;
        this.value = formatearMiles(this.value);
        this.selectionStart = this.selectionEnd = cursorPos;
    }






</script>


