@{
    ViewData["Title"] = "Todos los Proyectos";
}


<h1 class="text-3xl font-bold py-12 text-gray-800 mb-6">@ViewData["Title"]</h1>

<div class="mb-8">
    <select id="projectStatus" onchange="filterProjects()"
            class="w-full sm:w-64 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-400">
        <option value="">Todos los Estados</option>
        <option value="presupuesto">Proyectos En Presupuesto</option>
        <option value="licitado">Proyectos A Licitar</option>
        <option value="negociacion">Proyectos En Negociación</option>
        <option value="ejecucion">Proyectos En Ejecución</option>
        <option value="terminados">Proyectos Terminados</option>
        <option value="rechazados">Proyectos Rechazados</option>
    </select>
</div>

<!-- Sección Presupuesto -->
<div id="presupuestoSection" style="display: none;">
    <h2 class="text-2xl font-bold text-black mb-4">📐 Proyectos En Presupuesto</h2>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        @foreach (var proyecto in ViewBag.Presupuesto)
        {
            <a href="@Url.Action("ObtenerPresupuestoProyecto", "Proyecto", new { id = proyecto.Id })" class="group transform hover:scale-[1.03] transition-all duration-300">
                <div class="bg-white border-2 border-orange-500 rounded-2xl shadow-md hover:shadow-xl p-6 h-full flex flex-col justify-between">
                    <div class="flex justify-center mb-4">
                        <svg class="w-10 h-10 text-orange-500 group-hover:scale-110 transition" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </div>
                    <div class="text-center">
                        <h3 class="text-lg font-bold text-orange-500">@proyecto.Nombre</h3>
                        <p class="text-sm text-gray-600 mt-1">N° @proyecto.NumProyecto</p>
                        <p class="text-sm text-gray-600">@proyecto.NombreCliente</p>
                    </div>
                </div>
            </a>
        }
    </div>
</div>

