<h2 class="text-2xl font-bold mb-4">Clasificación de Proyectos</h2>
<div class="container mx-auto mt-4 p-4 bg-white rounded-lg shadow-md">
    <div class="overflow-x-auto relative">
        <table id="proyectotable" class="min-w-full divide-y divide-gray-200">
            <thead class="bg-blue-100">
                <tr>
                    <th class="text-left text-xs font-medium">
                        <select name="tipologia" id="tipologia" class="form-input">
                            <option value="" disabled selected>Seleccione una Tipología</option>
                            @foreach (var t in ViewBag.Tipologias)
                            {
                                <option value="@t.Id">@t.TipoTipologia</option>
                            }
                        </select>
                    </th>
                    @foreach (var c in ViewBag.Ccosto)
                    {
                        <th class="text-left text-xs font-medium">
                            @c.TipoCcosto
                        </th>
                    }
                    <th class="text-left text-xs font-medium">Todos</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var u in ViewBag.Unegocio)
                {
                    <tr>
                        <td>@u.TipoUnegocio</td>

                        @foreach (var c in ViewBag.Ccosto) 
                        {
                            <td>
                                <input type="radio" name="unegocio_@u.Id" value="@u.Id" class="form-radio" />
                            </td>
                        }

                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div id="proyectosContainer" class="section-content"></div>


<script>

        $(document).ready(function () {
            function filtrarProyectos() {
                var tipologiaId = $('#tipologia').val();
                var unegocioId = $('input[name^="unegocio_"]:checked').val();

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("FiltrarProyectos", "Proyecto")',
                    data: {
                        tipologiaId: tipologiaId,
                        unegocioId: unegocioId
                    },
                    success: function (data) {
                        $('#proyectosContainer').empty();
                    console.log(data);
                    $.each(data, function (index, proyecto) {
                        $('#proyectosContainer').append(`
            <a href="/Proyecto/ObtenerProyectos/${proyecto.id}" class="block mb-4">
                <div class="card bg-white p-4 rounded-lg shadow-md transition hover:bg-gray-800 hover:border-2 hover:border-orange-400 cursor-pointer">
                    <h3 class="text-lg font-bold transition hover:text-orange-400">${proyecto.nombre}</h3>
                            <p class="text-sm text-gray-600 transition hover:text-white">Cliente: ${proyecto.numProyecto}</p>
                    <p class="text-sm text-gray-600 transition hover:text-white">Cliente: ${proyecto.nombreCliente}</p>
                </div>
            </a>
        `);
                    });
                    }
                });
            }

            $('#tipologia').change(filtrarProyectos);
            $(document).on('change', 'input[name^="unegocio_"]', filtrarProyectos);
        });
</script>

