                        <td style="padding: 10px; border: 1px solid #ddd;"><input type="number" disabled id="horasSocios" name="horasSocios" placeholder="Horas Socios"></td>
                        <td style="padding: 10px; border: 1px solid #ddd;"><input type="number" disabled id="horasStaff" name="horasStaff" placeholder="Horas Staff"></td>
                        <td style="padding: 10px; border: 1px solid #ddd;"><input type="number" disabled id="consultorA" name="consultorA" placeholder="Horas A"></td>
                        <td style="padding: 10px; border: 1px solid #ddd;"><input type="number" disabled id="consultorB" name="consultorB" placeholder="Horas B"></td>
                        <td style="padding: 10px; border: 1px solid #ddd;"><input type="number" disabled id="consultorC" name="consultorC" placeholder="Horas C"></td>
                    </tr>
                </tbody>
