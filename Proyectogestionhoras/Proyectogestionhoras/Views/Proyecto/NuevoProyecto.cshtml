        }

        .integrante-card label {
            font-size: 1rem;
            font-weight: 600;
            color: #333;
            flex: 1;
        }

        .integrante-card input[type="number"] {
            display: none;
            margin-left: auto;
            padding: 5px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 100px;
        }

        .integrante-card.active input[type="number"] {
            display: block;
            pointer-events: auto;
        }

    .horas-disponibles {
